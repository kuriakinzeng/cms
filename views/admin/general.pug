extends ../layout

block content
  .page-header
    h3 General

  form.form-horizontal(method='PUT')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='site-title') Site Title
      .col-sm-8
        input.form-control(type='text', name='site-title', id='site-title', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='site-description') Site Description
      .col-sm-8
        input.form-control(type='text', name='site-description', id='site-description', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='site-logo') Site Logo
      .col-sm-8
        input.form-control(type='file', name='site-logo', id='site-logo', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='site-favicon') Site Favicon
      .col-sm-8
        input.form-control(type='file', name='site-favicon', id='site-favicon', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='site-cover') Site Cover
      .col-sm-8
        input.form-control(type='file', name='site-favicon', id='site-cover', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='facebook-profile-url') Facebook Profile URL
      .col-sm-8
        input.form-control(type='text', name='facebook-profile-url', id='facebook-profile-url', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='email') Email
      .col-sm-8
        input.form-control(type='email', name='email', id='email', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='address') Adress
      .col-sm-8
        input.form-control(type='text', name='address', id='address', autofocus=true)
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-save
          | Save
