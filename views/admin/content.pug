extends ../layout

block content
  .page-header
    a.btn.btn-primary.pull-right(href='/admin/new-page')
      | New Page
    h3 Content

  .tab
    button.tablinks(onclick="openTab(event, 't1')") London
    button.tablinks(onclick="openTab(event, 't2')") Paris
    button.tablinks(onclick="openTab(event, 't3')") Tokyo
  #t1.tabcontent
    a.fa.fa-edit.fa-lg.pull-right(href='#',style='margin-top:20px')
    h3 London
    p London is the capital city of England.
  #t2.tabcontent
    a.fa.fa-edit.fa-lg.pull-right(href='#',style='margin-top:20px')  
    h3 Paris
    p Paris is the capital of France.
  #t3.tabcontent
    a.fa.fa-edit.fa-lg.pull-right(href='#',style='margin-top:20px')  
    h3 Tokyo
    p Tokyo is the capital of Japan.


  style(type="text/css").
    div.tab {
      float: left;
      border: 1px solid #ccc;
      background-color: #fff;
      width: 25%;
      height: 400px;
    }
    div.tab button {
      display: block;
      background-color: white;
      color: black;
      padding: 22px 16px;
      width: 100%;
      border:none;
      border-bottom: 1px solid #ccc;
      outline: none;
      text-align: left;
      cursor: pointer;
      transition: 0.3s;
    }
    div.tab button:hover {
      background-color: #ddd;
    }
    div.tab button.active {
      background-color: #ccc;
    }
    .tabcontent {
      float: left;
      padding: 0px 12px;
      border: 1px solid #ccc;
      width: 75%;
      border-left: none;
      height: 400px;
    }
    
  script.
    function openTab(event, id) {
      var i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("tabcontent");
      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tablinks");
      for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }
      document.getElementById(id).style.display = "block";
      if(event){
        event.currentTarget.className += " active";
      }
    }
    openTab(null, 't1')


